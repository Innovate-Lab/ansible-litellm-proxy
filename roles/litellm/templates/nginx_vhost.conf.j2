server {
    listen 80;
    server_name {{ domain_name }};
    
    # Redirect all HTTP requests to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
    
    # Allow Let's Encrypt challenges
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
}

server {
    listen 443 ssl http2;
    server_name {{ domain_name }};
    
    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;
    
    # Include SSL parameters
    include snippets/ssl-params.conf;
    
    # Proxy headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    
    # Websocket support
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    
    # Root location
    location / {
        # Rate limiting
        limit_req zone=litellm_limit burst=20 nodelay;
        limit_conn litellm_conn 10;
        
        # Proxy to LiteLLM
        proxy_buffering off;
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_read_timeout {{ nginx_proxy_timeout }};
        proxy_connect_timeout {{ nginx_proxy_timeout }};
        proxy_send_timeout {{ nginx_proxy_timeout }};
        
        # Security headers
        proxy_hide_header X-Powered-By;
        proxy_hide_header Server;
    }

    location /health {
        # Proxy to LiteLLM
        proxy_buffering off;
        proxy_pass http://127.0.0.1:{{ app_port }}/health/liveliness;
        proxy_read_timeout {{ nginx_proxy_timeout }};
        proxy_connect_timeout {{ nginx_proxy_timeout }};
        proxy_send_timeout {{ nginx_proxy_timeout }};
        
        # Security headers
        proxy_hide_header X-Powered-By;
        proxy_hide_header Server;
    }
    
    # Deny access to sensitive files
    location ~ /\.(?!well-known) {
        deny all;
    }
    
    # Logging
    access_log /var/log/nginx/{{ domain_name }}/access.log combined buffer=512k flush=1m;
    error_log /var/log/nginx/{{ domain_name }}/error.log;
}
